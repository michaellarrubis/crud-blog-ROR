<% provide(:title, "All Blogs") %>
<%= render "partials/user_navbar" %>
<!--start l-contents-->
    <div class="l-container u-clear">

        <!--start l-main-->
        <main class="l-main js-main">
            <div class="l-main-block"></div>
            <div class="archive">
                <ul class="archive-list">
                    
                	<% @all_blogs.each do |blog| %>
                		<li class="archive-item">
	                    	<article class="card">
	                    		<%= link_to blog_path(blog), class: "card-link" do %>
	                    			<%= image_tag blog.image.url(:medium), alt: blog.title, class: "card-image" %>
	                    			<div class="card-bottom">
	                    				<h1 class="card-title"><%= blog.title %></h1>
							            <time class="card-date">
							                <%= blog.created_at.strftime("%d %b, %Y")%>
							            </time>
	                    			</div>
	                    		<% end %>
	                    	</article>
	                    </li>
                	<% end %> 
                    
                </ul>
            </div>
            <a href="#" class="archive-button">
                <div class="button">
				    <p class="button-text">More</p>
				</div>
            </a>
        </main>
        <!--end l-main-->

    </div>
    <!--end l-contents-->